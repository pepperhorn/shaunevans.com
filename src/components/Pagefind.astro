---
// Only load pagefind assets in production (after build)
// In dev mode, these files don't exist yet (generated by postbuild script)
const isDev = import.meta.env.DEV;
---

{!isDev && (
  <link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
)}
{!isDev && (
  <script src="/pagefind/pagefind-ui.js" is:inline></script>
)}

<button id="searchButton" class="text-lg pl-[30px] h-[50px]">Search</button>

<div id="myModal" class="modal">
  <div
    class="modal-content bg-[rgb(245,245,245)] dark:bg-[rgb(34,33,37)] dark:text-[rgb(245,245,245)] m-2 w-[350px] md:w-[700px]"
  >
    <span id="closeButton" class="close">&times;</span>
    <div id="search" class="m-8" transition:persist></div>
  </div>
</div>

<script>
  let pagefindUI;

      document.addEventListener("astro:page-load", () => {
        const modal = document.getElementById("myModal");
        const searchButton = document.getElementById("searchButton");
        const closeButton = document.getElementById("closeButton");

        if (!modal || !searchButton || !closeButton) return;

        searchButton.addEventListener("click", () => {
          modal.classList.add("visible");
          const searchInput = document.querySelector<HTMLInputElement>("#search input");
          searchInput?.focus();
        });

        closeButton.addEventListener("click", () => {
          modal.classList.remove("visible");
        });

        // Close the modal when clicking outside
        window.addEventListener("click", (event) => {
          if (event.target === modal) {
            modal.classList.remove("visible");
          }
        });

    if (pagefindUI) {
      pagefindUI.destroy();
    }

    // Only initialize if PagefindUI is available (after build)
    if (typeof window !== 'undefined' && typeof (window as any).PagefindUI !== 'undefined') {
      pagefindUI = new (window as any).PagefindUI({
        element: "#search",
        showSubResults: true,
        resetStyles: false,
      });
    } else {
      // In dev mode, show a message
      const searchDiv = document.getElementById("search");
      if (searchDiv && !searchDiv.dataset.messageShown) {
        searchDiv.innerHTML = '<p class="text-center text-gray-500">Search will be available after build. Run <code>pnpm build</code> to generate the search index.</p>';
        searchDiv.dataset.messageShown = 'true';
      }
    }
  });
</script>

<style is:global>
  .modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.4);
  }
  .modal.visible {
    display: block;
  }
  .modal-content {
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    max-height: 70vh;
    overflow-y: auto;
    border-radius: 20px;
  }

  .close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
  }

  .close:hover,
  .close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
  }
  .dark {
    --pagefind-ui-text: rgb(245, 245, 245) !important;
    --pagefind-ui-primary: rgb(245, 245, 245) !important;
    --pagefind-ui-background: rgb(34, 33, 37) !important;
    --pagefind-ui-border: rgb(245, 245, 245) !important;
    --pagefind-ui-tag: rgb(245, 245, 245) !important;
  }
</style>
