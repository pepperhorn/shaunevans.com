---
import BaseLayout from "../layouts/BaseLayout.astro";
const { title, images, alt, urls, width, height } = Astro.props;
---

<BaseLayout title={title} is404Page={false}>
  <div
    id="homepage"
    class="fixed inset-0 w-screen h-screen flex justify-center items-center -z-10"
    data-images={images}
    data-alt={alt}
    data-urls={urls}
    data-width={JSON.stringify(width)}
    data-height={JSON.stringify(height)}
  >
    <a class="w-full h-full">
      <picture class="w-full h-full block">
        <source media="(min-width: 1280px)" srcset="" data-srcset-large />
        <source media="(min-width: 768px)" srcset="" data-srcset-medium />
        <img
          id="randomHomePageImage"
          class="hidden w-full h-full object-cover object-center"
          src=""
          alt=""
          data-srcset-small
        />
      </picture>
    </a>
    <slot />
  </div>
</BaseLayout>
<script src="../scripts/homePage.js"></script>
