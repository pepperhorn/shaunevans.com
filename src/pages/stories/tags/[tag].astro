---
import { getCollection } from "astro:content";
import BaseLayout from "../../../layouts/BaseLayout.astro";
import BlogPost from "../../../components/BlogPost.astro";
import { sortByDate } from "../../../components/sortbydate";
import { resolveImage } from "../../../utils/imageMap";

export async function getStaticPaths() {
  const allLongForm = await getCollection("stories");
  const uniqueTags = [
    ...new Set(allLongForm.map((post) => post.data.tags).flat()),
  ];

  return uniqueTags.map((tag) => {
    const filteredPosts = allLongForm.filter((post) =>
      post.data.tags.includes(tag),
    );
    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;

// Resolve images for all posts
const postsWithResolvedImages = await Promise.all(
  posts.map(async (post) => {
    let resolvedImage = null;
    if (post.data?.image?.src) {
      const imageSrc = post.data.image.src;
      // Check if it's a local image (not an external URL)
      if (!imageSrc.startsWith("http://") && !imageSrc.startsWith("https://")) {
        try {
          resolvedImage = resolveImage(imageSrc);
        } catch (error) {
          console.warn(`Failed to resolve image for post ${post.id}:`, error.message);
          resolvedImage = null;
        }
      } else {
        // External URL, use as-is
        resolvedImage = imageSrc;
      }
    }
    return {
      ...post,
      resolvedImage,
    };
  }),
);
---

<BaseLayout title={tag} is404Page={false}>
  {
    postsWithResolvedImages
      .sort((a, b) => sortByDate(a, b))
      .map((post) => (
        <BlogPost
          url={`/stories/${post.id}/`}
          image={post.resolvedImage || post.data?.image?.src || ""}
          alt={post.data?.image?.alt || ""}
          title={post.data?.title || ""}
          description={post.data?.description || ""}
          pubDate={post.data?.pubDate || ""}
          positionx={post.data?.image?.positionx || ""}
          positiony={post.data?.image?.positiony || ""}
        />
      ))
  }
</BaseLayout>

